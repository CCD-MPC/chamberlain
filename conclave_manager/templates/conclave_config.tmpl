# GENERAL
pid: {{{PID}}}
all_pids: [{{{ALL_PIDS}}}]
workflow_name: {{{WORKFLOW_NAME}}}
use_swift: true

input_path: /app/
output_path: /app/
code_path: /app/

# SPARK
spark:
  master_url: <ip>:<port>

# OBLIV-C
oblivc:
  oc_path: /app/obliv-c/bin/oblivcc
  ip_port: <str>:<str>

# JIFF
jiff:
  jiff_path: /app/jiff/
  party_count: <int>
  server_pid: 1
  server_ip: <str>
  server_port: <int>

# NET
net:
  parties:
{{{NET_CONFIG}}}

# SWIFT [TODO]
swift:
  source:
    AUTHORIZATION:
      osAuthUrl: {{{OS_AUTH}}}
      username: {{{USERNAME}}}
      password: {{{PASSWORD}}}
    PROJECT:
      osProjectDomain: {{{PROJ_DOMAIN}}}
      osProjectName: {{{PROJ_NAME}}}
    DATA:
      container_name: {{{CONTAINER_NAME}}}
      files:
{{{IN_FILES}}}
  dest:
    AUTHORIZATION:
      osAuthUrl: {{{OS_AUTH}}}
      username: {{{USERNAME}}}
      password: {{{PASSWORD}}}
    PROJECT:
      osProjectDomain: {{{PROJ_DOMAIN}}}
      osProjectName: {{{PROJ_NAME}}}
    DATA:
      container_name: {{{CONTAINER_NAME}}}
