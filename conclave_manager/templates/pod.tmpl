{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata":
    {
        "name": "{{{POD_NAME}}}",
        "labels":
        {
            "app": "{{{POD_NAME}}}"
        }
    },
    "spec":
    {
        "selector":
        {
            "app": "{{{POD_NAME}}}"
        },
        "restartPolicy": "Never",
        "containers":
        [
            {
                "name": "{{{POD_NAME}}}",
                "image": "docker.io/bengetch/conclave:latest",
                "ports":
                [
                    {
                        "containerPort": 5000
                    }
                ],
                "imagePullPolicy": "Always",
                "env":
                [
                    {
                        "name": "KUBECFG_PATH",
                        "value": "/tmp/.kube/config"
                    },
                    {
                        "name": "OPENSHIFTMGR_PROJECT",
                        "value": "cici"
                    }
                ],
                "command":
                [
                    "python3.5",
                    "/app/protocol.py",
                    "--conf",
                    "/app/conf.yaml"
                ],
                "volumeMounts":
                {
                    "name": "config-volume",
                    "mountPath": "/app"
                }
            }
        ],
        "volumes":
        [
            {
                "name": "config-volume",
                "configMap":
                {
                    "name": "{{{CONFIGMAP_NAME}}}",
                    "items":
                    [
                        {
                            "key": "protocol",
                            "path": "protocol.py"
                        },
                        {
                            "key": "conf",
                            "path": "conf.yaml"
                        }
                    ]
                }
            }
        ]
    }
}