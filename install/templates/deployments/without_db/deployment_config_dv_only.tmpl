{
    "apiVersion":"{{{API_VERSION}}}",
    "kind":"DeploymentConfig",
    "metadata":{
        "generation":1,
        "labels":{
            "app":"chamberlain"
        },
        "name":"chamberlain"
    },
    "spec":{
        "replicas":1,
        "selector":{
            "app":"chamberlain",
            "deploymentconfig":"chamberlain"
        },
        "strategy":{
            "activeDeadlineSeconds":21600,
            "rollingParams":{
                "intervalSeconds":1,
                "maxSurge":"25%",
                "maxUnavailable":"25%",
                "timeoutSeconds":600,
                "updatePeriodSeconds":1
            },
            "type":"Rolling"
        },
        "template":{
            "metadata":{
                "labels":{
                    "app":"chamberlain",
                    "deploymentconfig":"chamberlain"
                }
            },
            "spec":{
                "serviceAccountName":"cw-svc",
                "automountServiceAccountToken": True,
                "containers":[
                    {
                        "volumeMounts":[
                            {
                                "name":"dv-vol",
                                "mountPath":"/etc/dv-auth",
                                "readOnly": True
                            }
                        ],
                        "image":"docker.io/bengetch/chamberlain:latest",
                        "imagePullPolicy":"Always",
                        "name":"chamberlain",
                        "ports":[
                            {
                                "containerPort":8080,
                                "protocol":"TCP"
                            }
                        ],
                        "resources":{
                            "limits":{
                                "memory":"1024Mi",
                                "cpu":"2000m"
                            },
                            "requests":{
                                "memory":"150Mi",
                                "cpu":"250m"
                            }
                        },
                        "terminationMessagePath":"/dev/termination-log",
                        "env":[
                            {
                                "name":"OPENSHIFTMGR_PROJECT",
                                "value":"{{{NAMESPACE}}}"
                            },
                            {
                                "name":"WITH_VOL",
                                "value":"False"
                            }
                        ]
                    }
                ],
                "volumes":[
                    {
                        "name":"dv-vol",
                        "configMap":{
                            "name":"dv-auth",
                            "items":[
                                {
                                    "key":"host",
                                    "path":"host"
                                },
                                {
                                    "key":"token",
                                    "path":"token"
                                }
                            ]
                        }
                    }
                ],
                "dnsPolicy":"ClusterFirst",
                "restartPolicy":"Always",
                "terminationGracePeriodSeconds":30
            }
        },
        "test": False,
        "triggers":[
            {
                "type":"ConfigChange"
            }
        ]
    }
}