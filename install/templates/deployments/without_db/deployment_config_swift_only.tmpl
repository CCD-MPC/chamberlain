{
    "apiVersion":"apps.openshift.io/v1",
    "kind":"DeploymentConfig",
    "metadata":{
        "generation":1,
        "labels":{
            "app":"conclave-web"
        },
        "name":"conclave-web"
    },
    "spec":{
        "replicas":1,
        "selector":{
            "app":"conclave-web",
            "deploymentconfig":"conclave-web"
        },
        "strategy":{
            "activeDeadlineSeconds":21600,
            "rollingParams":{
                "intervalSeconds":1,
                "maxSurge":"25%",
                "maxUnavailable":"25%",
                "timeoutSeconds":600,
                "updatePeriodSeconds":1
            },
            "type":"Rolling"
        },
        "template":{
            "metadata":{
                "labels":{
                    "app":"conclave-web",
                    "deploymentconfig":"conclave-web"
                }
            },
            "spec":{
                "serviceAccountName":"cw-svc",
                "automountServiceAccountToken": True,
                "containers":[
                    {
                        "volumeMounts":[
                            {
                                "name":"kubecfg-volume",
                                "mountPath":"/tmp/.kube/",
                                "readOnly": True
                            },
                            {
                                "name":"swift-vol",
                                "mountPath":"/etc/config/",
                                "readOnly": True
                            }
                        ],
                        "image":"docker.io/bengetch/conclave-web:latest",
                        "imagePullPolicy":"Always",
                        "name":"conclave-web",
                        "ports":[
                            {
                                "containerPort":8080,
                                "protocol":"TCP"
                            }
                        ],
                        "resources":{
                            "limits":{
                                "memory":"1024Mi",
                                "cpu":"2000m"
                            },
                            "requests":{
                                "memory":"150Mi",
                                "cpu":"250m"
                            }
                        },
                        "terminationMessagePath":"/dev/termination-log",
                        "env":[
                            {
                                "name":"KUBECFG_PATH",
                                "value":"/tmp/.kube/config"
                            },
                            {
                                "name":"OPENSHIFTMGR_PROJECT",
                                "value":"{{{NAMESPACE}}}"
                            },
                            {
                                "name":"WITH_VOL",
                                "value":"False"
                            }
                        ]
                    }
                ],
                "volumes":[
                    {
                        "name":"kubecfg-volume",
                        "secret":{
                            "secretName":"kube-config"
                        }
                    },
                    {
                        "name":"swift-vol",
                        "configMap":{
                            "name":"swift-cfg",
                            "items":[
                                {
                                    "key":"osAuthUrl",
                                    "path":"auth_url"
                                },
                                {
                                    "key":"osProjectDomain",
                                    "path":"proj_domain"
                                },
                                {
                                    "key":"osProjectName",
                                    "path":"proj_name"
                                },
                                {
                                    "key":"username",
                                    "path":"user_name"
                                },
                                {
                                    "key":"password",
                                    "path":"pass"
                                }
                            ]
                        }
                    }
                ],
                "dnsPolicy":"ClusterFirst",
                "restartPolicy":"Always",
                "terminationGracePeriodSeconds":30
            }
        },
        "test": False,
        "triggers":[
            {
                "type":"ConfigChange"
            }
        ]
    }
}